c() { cd ~/code/$1; }
_c() { _files -W ~/code -/; }
compdef _c c

function g {
  if [[ $# > 0 ]]; then
    git $@
  else
    git status
  fi
}

function rrg {
  bin/rails routes | grep $1
}

function take {
  mkdir $1
  cd $1
}

# Allows commit message without typing quotes (can't have quotes in the commit msg though).
function gc {
  git commit -m "$*"
}

gcor() {
  local branch=$(git branch | grep "$1" | head -n 1 | tr -d " *")
  if [ -n "$branch" ]; then
    git checkout "$branch"
  else
    echo "No branch found matching: $1"
    return 1
  fi
}

gcof() {
  git checkout $(git branch --format='%(refname:short)' | fzf)
}
