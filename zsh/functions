c() { cd ~/code/$1; }
_c() { _files -W ~/code -/; }
compdef _c c

function g {
  if [[ $# > 0 ]]; then
    git $@
  else
    git status
  fi
}

function rrg {
  bin/rake routes | grep $1
}

function take {
  mkdir $1
  cd $1
}

# Allows commit message without typing quotes (can't have quotes in the commit msg though).
function gc {
  git commit -m "$*"
}
